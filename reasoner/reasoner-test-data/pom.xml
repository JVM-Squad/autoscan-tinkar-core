<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>reasoner-test-data</artifactId>
	<packaging>pom</packaging>

	<parent>
		<groupId>dev.ikm.tinkar</groupId>
		<artifactId>reasoner</artifactId>
		<version>1.49.0</version>
	</parent>

	<name>Reasoner Test Data Artifacts</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven-assembly-plugin.version>3.6.0</maven-assembly-plugin.version>
	</properties>

	<modules>
		<module>reasoner-test-data-assembly-descriptor</module>
		<module>reasoner-test-data-sample</module>
		<module>reasoner-test-data-solor</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-deploy-plugin</artifactId>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<profiles>
		<profile>
			<id>test-data-build</id>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-assembly-plugin</artifactId>
							<version>${maven-assembly-plugin.version}</version>
							<dependencies>
								<dependency>
									<groupId>${project.groupId}</groupId>
									<artifactId>reasoner-test-data-assembly-descriptor</artifactId>
									<version>${project.parent.version}</version>
								</dependency>
							</dependencies>
							<executions>
								<execution>
									<id>reasoner</id>
									<phase>package</phase>
									<goals>
										<goal>single</goal>
									</goals>
									<configuration>
										<includeProjectBuildFilters>false</includeProjectBuildFilters>
										<descriptorRefs>
											<descriptorRef>data</descriptorRef>
										</descriptorRefs>
										<appendAssemblyId>false</appendAssemblyId>
									</configuration>
								</execution>
							</executions>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

</project>
